<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    >
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/imgv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/view_logo"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imgv_logo" >

            <TextView
                android:id="@+id/tv_logo_title"
                android:drawableRight="@drawable/ic_view_verified"
                android:textColor="@color/view_text_main"
                android:text="오늘의집"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_write_time"
                android:textColor="@color/view_text_sub"
                android:text="12시간 전"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/view_text_main"
        android:text="30년 된 아파트 , 다 부셔 버렸더니.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content_sub"
        android:textColor="@color/view_text_main"
        android:text="어마어마한 스트레스 끝에 탄생한 집, 완전 대박"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"/>
    <ImageView
        android:id="@+id/imgv_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content_sub2"
        android:textColor="@color/view_text_main"
        android:text="공사 비용 줄이려고 했다가.. 집을 다 부쉈다고요..?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_logo_title2"
        android:textSize="12dp"
        android:textColor="@color/view_text_sub"
        android:text="오늘의집"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/imgv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgv_share"
                android:text="공유하기" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/imgv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorit"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgv_like"
                android:text="좋아요" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="26"/>
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>